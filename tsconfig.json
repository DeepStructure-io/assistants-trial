{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "bundler",
        "module": "es2022",
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["es2022"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
